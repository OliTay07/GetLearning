<Window x:Class="GetLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetLearning"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450"
        Width="800"
        Background="#8293BA">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            
            <!-- Choose your theme below text -->
            <TextBlock Text="Ready to learn? Choose your theme below!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 30"/>

            <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" >

                <!-- Theme 1 -->
                <Button Content="Theme One"
                        Name="Btn_ThemeOne"
                        Click="Btn_ThemeOne_Click"
                        Margin="10"
                        Padding="15"
                        FontSize="16"
                        Background="#324376"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="2"
                        Cursor="Hand"/>

                <!-- Theme 2 -->
                <Button Content="Theme Two"
                         Name="Btn_ThemeTwo"
                        Click="Btn_ThemeTwo_Click"
                        Margin="10"
                        Padding="15"
                        FontSize="16"
                        Background="#324376"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="2"
                        Cursor="Hand"/>

                <!-- Theme 3 -->
                <Button Content="Theme Three"
                        Name="Btn_ThemeThree"
                        Click="Btn_ThemeThree_Click"
                        Margin="10"
                        Padding="15"
                        FontSize="16"
                        Background="#324376"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="2"
                        Cursor="Hand"/>

                
                <!-- Theme 4 -->
                <Button Content="Theme Four"
                        Name="Btn_ThemeFour"
                        Click="Btn_ThemeFour_Click"
                        Margin="10"
                        Padding="15"
                        FontSize="16"
                        Background="#324376"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="2"
                        Cursor="Hand"/>

            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
