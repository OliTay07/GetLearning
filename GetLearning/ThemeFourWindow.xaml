<Window x:Class="GetLearning.ThemeFourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetLearning"
        mc:Ignorable="d"
        Title="Theme 4 Questions" 
        Height="450"
        Width="800"
        Background="#8293BA">
    
    <ScrollViewer>
        <StackPanel Margin="10">
            <!-- Loop through questions -->
            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemTemplate>

                    <DataTemplate>
                        <!-- Container for each question -->
                        <Border BorderBrush="Black" 
                      BorderThickness="1" 
                      Padding="10"
                      Margin="5"
                      >

                            <!-- Question -->
                            <StackPanel>
                                <TextBlock Text="{Binding Text}"
                                 FontWeight="Bold" 
                                 Margin="0,0,0,5" 
                                 HorizontalAlignment="Center"/>


                                <!-- User input box-->
                                <TextBox Width="200"
                               Text="{Binding UserInput}"
                               Margin="0,0,0,10"
                                  />

                                <!-- Submit button -->
                                <Button Content="Submit" Width="100" 
                                 Command="{Binding DataContext.SubmitAnswerCommand,
                                 RelativeSource={RelativeSource AncestorType=Window}}" 
                                 CommandParameter="{Binding}" 
                                 Background="#324376"
                                 Foreground="White"/>


                                <!-- Feedback -->
                                <TextBlock Text="{Binding Feedback}"
                                 Foreground="#324376" 
                                 Margin="0,5,0,0"
                                 HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>
