<Window x:Class="GetLearning.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetLearning"
        mc:Ignorable="d"
        Title="RegisterWindow" 
        Height="700" 
        Width="600"
        Background="#8293BA">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />

            <!-- "*" means that all the rows with a height of * are equal heights -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Start learning today -->
        <TextBlock Text="Start learning today..." 
               Grid.ColumnSpan="2"
               Grid.Row="0"
               FontSize="40"
               TextAlignment="Center"
               VerticalAlignment="Bottom"
               Foreground="#324376"></TextBlock>


        <!-- First Name -->

        <TextBlock Text="First Name:" 
        Grid.Row="1"
        FontSize="20"
        TextAlignment="Left"
        VerticalAlignment="Top"
        Foreground="#324376" 
        Margin="25,20,0,0"></TextBlock>

        <TextBox x:Name="tbFirstName"
               Grid.Row="1"
               Grid.Column="0"
               Margin="10"
               FontSize="20"
               Width="250"
               Height="40"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom" />


        <!-- Surname -->

        <TextBlock Text="Surname:" 
     Grid.Row="1"
     Grid.Column="1"
     FontSize="20"
     TextAlignment="Left"
     VerticalAlignment="Top"
     Foreground="#324376" 
     Grid.ColumnSpan="2" 
     Margin="25,20,0,0"></TextBlock>


        <TextBox x:Name="tbSurname"
       Grid.Row="1"
       Grid.Column="1"
       Margin="10"
       FontSize="20"
       Width="250"
       Height="40"
       HorizontalAlignment="Center"
       VerticalAlignment="Bottom" />

        <!-- Email Address -->
        <TextBlock Text="Email Address:" 
     Grid.Row="2"
     FontSize="20"
     TextAlignment="Left"
     VerticalAlignment="Top"
     Foreground="#324376" 
     Grid.ColumnSpan="2" 
     Margin="25,20,0,0"></TextBlock>

        <TextBox x:Name="tbEmail"
       Grid.Row="2"
       Grid.Column="0"
       Grid.ColumnSpan="2"
       Margin="10"
       FontSize="20"
       Width="550"
       Height="40"
       HorizontalAlignment="Center"
       VerticalAlignment="Bottom" 
       />


        <!-- Confirm Email -->

        <TextBlock Text="Confirm Email Address:" 
     Grid.Row="3"
     FontSize="20"
     TextAlignment="Left"
     VerticalAlignment="Top"
     Foreground="#324376" 
     Grid.ColumnSpan="2" 
     Margin="25,20,0,0"></TextBlock>


        <TextBox x:Name="tbConfirmEmail"
        Grid.Row="3"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Margin="10"
        FontSize="20"
        Width="550"
        Height="40"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom" />

        <!-- Password -->
        <TextBlock Text="Password:" 
     Grid.Row="4"
     FontSize="20"
     TextAlignment="Left"
     VerticalAlignment="Top"
     Foreground="#324376" 
     Grid.ColumnSpan="2" 
     Margin="25,20,0,0"></TextBlock>


        <TextBox x:Name="tbPassword"
        Grid.Row="4"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Margin="10"
        FontSize="20"
        Width="550"
        Height="40"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom" />

        <!-- Confirm Password -->

        <TextBlock Text="Confirm Password:" 
     Grid.Row="5"
     FontSize="20"
     TextAlignment="Left"
     VerticalAlignment="Top"
     Foreground="#324376" 
     Grid.ColumnSpan="2" 
     Margin="25,20,0,0"
     ></TextBlock>


        <TextBox x:Name="tbConfirmPassword"
        Grid.Row="5"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Margin="10"
        FontSize="20"
        Width="550"
        Height="40"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        />

        <!-- Clear Button -->

        <Button x:Name="btnRegisterClear"
    Width="200"
    Height="60"
    Content="Clear"
    FontSize="25"
    FontWeight="Bold"
    Foreground="White"
    Grid.Row="6"
    Click="btnRegisterClear_Click"
    >

            <!-- Style the button -->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#324376"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#506FA7"
                                                        Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#324376"
                                                        Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Register Button -->

        <Button x:Name="btnRegister"
        Width="200"
        Height="60"
        Content="Register"
        FontSize="25"
        FontWeight="Bold"
        Foreground="White"
        Grid.Row="6"
        Grid.Column="1"
        Click="btnRegister_Click"
        >

            <!-- Style the button -->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#324376"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="15"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#506FA7"
                                                Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#324376"
                                                Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>


        <!-- Login hyperlink-->

        <TextBlock HorizontalAlignment="Center" 
               Margin="0,10,0,0" 
               FontSize="14"
               Grid.Row="7"
               Grid.ColumnSpan="2"
               Foreground="White">
        Already have an account?
    <Hyperlink Click="Hyperlink_Click"
               Foreground="#324376">Log in
    </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
